<Window x:Class="Projet_Fil_Rouge.Collabo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Projet_Fil_Rouge"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Collabo" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <DataGrid x:Name="mydatagridview" 
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                      CanUserSortColumns="True"
                      CanUserAddRows="False" 
                      materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                      HorizontalAlignment="Left" Margin="10,10,0,10" Width="774"/>
        </Grid>
    </Grid>
</Window>
